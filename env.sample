# Cursor2API Configuration
# Copy this file to .env and fill in the values

# Server Configuration
PORT=8002
DEBUG=false

# API Authentication
# This is the key clients use to access your API
API_KEY=your-api-key-here

# Supported Models (comma-separated)
MODELS=claude-3.5-sonnet,gpt-4o,claude-3.5-haiku,claude-4-sonnet,gpt-4-turbo

# Optional: System prompt to inject into all requests
SYSTEM_PROMPT_INJECT=

# Request Configuration
TIMEOUT=120
MAX_INPUT_LENGTH=200000

# ============================================
# Cursor IDE Client Configuration
# ============================================

# Cursor API URL (usually don't need to change)
CURSOR_API_URL=https://api2.cursor.sh

# Cursor Session Token (REQUIRED)
# Get this from Cursor website:
# 1. Visit https://www.cursor.com and login
# 2. Press F12 to open browser Developer Tools
# 3. Go to Application tab -> Cookies -> https://www.cursor.com
# 4. Find 'WorkosCursorSessionToken' cookie and copy its value
# Token format: user_01JXXXXXX... or contains %3A%3A separator
CURSOR_TOKEN=

# Client Key (Optional, for enhanced compatibility)
# Found in x-client-key header
CURSOR_CLIENT_KEY=

# Checksum (Optional)
# Found in x-cursor-checksum header
CURSOR_CHECKSUM=

# Cursor Client Version
CURSOR_VERSION=0.48.6

# Timezone
CURSOR_TIMEZONE=Asia/Shanghai

# Ghost Mode (privacy mode)
CURSOR_GHOST_MODE=true

# Working Directory (simulated project path)
CURSOR_WORKING_DIR=/c:/Users/Default

